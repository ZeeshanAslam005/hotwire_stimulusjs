<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
    <div>
    <%= f.label :employeer, style: "display: block" %>
    <%= f.text_field :employeer %>
    <%= error_msg(@employment, :employeer) %>
  </div>

  <div>
    <%= f.label :date_started, style: "display: block" %>
    <%= f.date_field :date_started %>
    <%= error_msg(@employment, :date_started) %>
  </div>

  <div>
    <%= f.label :date_employment_ended, style: "display: block" %>
    <%= f.date_field :date_employment_ended %>
    <%= error_msg(@employment, :date_employment_ended) %>
  </div>

  <button type="button" data-action="nested-form#remove">Remove</button>

  <%= f.hidden_field :_destroy %>
</div>