<div id="<%= dom_id personal_datum %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">First Name:</strong>
    <%= personal_datum.first_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= personal_datum.email %>
  </p>

  <% if action_name != "show" %>
    <%#= link_to "Show this post", personal_datum, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit', edit_personal_datum_path(personal_datum), data: { turbo_frame: 'modal' }, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
